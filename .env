# Phase 6 LLM
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama3.1:8b

# Simple auth for smoke/login
AUTH_PASSWORD=0000

# Limits & timeouts (Phase 6.4)
MAX_INPUT_CHARS=4000
MAX_CONCURRENCY=3
LLM_TIMEOUT_SEC=60
STREAM_TIMEOUT_SEC=120
DEFAULT_NUM_PREDICT=512
DEFAULT_TEMPERATURE=0.2

# Phase 6.6 — Memory/RAG
ENABLE_MEMORY=true
MEMORY_TOP_K=6
MEMORY_USER_ID=dev
MEMORY_INJECT_MODE=system

# --- Compose runtime (F12) ---
# Если используешь сервис ollama внутри compose:
OLLAMA_BASE_URL=http://ollama:11434

# LLM имя модели для API (код читает MODEL_NAME; оставим и старый OLLAMA_MODEL)
MODEL_NAME=llama3.1:8b

# Chroma путь внутри контейнера (совпадает с docker-compose volume /app/storage)
CHROMA_DIR=/app/storage/chroma

# Retrieval тюнинг под наш RAG
RELEVANCE_THRESHOLD=0.20
K_MEMORY=4

# Опционально: токен для предзагрузки эмбеддингов через setup-скрипт
HF_TOKEN=